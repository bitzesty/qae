web: &web
  build: .
  command: bundle exec puma -C config/puma.rb
  environment:
    - RAILS_ENV=development
    - RACK_ENV=development
  ports:
    - 3000:3000
  volumes:
    - .:/app
  links:
    - postgres
    - redis
worker:
  <<: *web
  ports: []
  command: [bundle, exec, sidekiq, -C, config/sidekiq.yml]
redis:
  image: convox/redis
  ports:
    - 6379:6379
postgres:
  image: convox/postgres
  ports:
    - 5432:5432
