- title "Press Book Entry: Award acceptance"

div
  header.group.page-header.page-header-wider
    div
      h1.govuk-heading-l Award Acceptance

  .article-container.article-container-wider
    article.group role="article"
      .inner
        = simple_form_for form_answer, url: update_acceptance_users_form_answer_press_summary_path(form_answer, token: params[:token]), html: { class: "qae-form", method: :post } do |f|
          fieldset.question-block.sub-question
            h2 = f.input :accepted, label: "Do you accept the award nomination?"
            ul.errors-container
            .clear
            .question-group
              = f.input :accepted, as: :radio_buttons, item_wrapper_class: "selectable", label: false
              span.clear


          footer
            nav.pagination aria-label="Pagination" role="navigation"
              ul.group
                li.previous.previous-alternate
                  = link_to dashboard_path, class: "govuk-back-link govuk-!-font-size-19", role: "button"
                    span.pagination-label Back to Dashboard
                li.submit
                  = f.submit "Continue", class: "govuk-button", rel: "next"
