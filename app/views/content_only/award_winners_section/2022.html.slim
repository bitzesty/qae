                        target: "_blank", class: 'govuk-link'

          - if any_trade_winner
            p.govuk-body
              = link_to "Queen's Awards for Enterprise 2022 Emblem - International Trade (PNG, 99KB)",
                        static_s3_asset_path(2022, "QA-logo-categories-2022_international_trade.png"),
                        target: "_blank", class: 'govuk-link'

            p.govuk-body
              = link_to "Queen's Awards for Enterprise 2022 Emblem - International Trade (EPS, 5.3MB)",
                        static_s3_asset_path(2022, "QA-logo-categories-2022_international_trade.eps"),
