- winners = FormAnswerDecorator.decorate_collection(@user_award_forms_submitted).select{ |app| app.awarded? }
- any_promotion_winner = winners.select{ |app| app.mobility? }.any?
- any_innovation_winner = winners.select{ |app| app.innovation? }.any?
- any_trade_winner = winners.select{ |app| app.trade? }.any?
- any_development_winner = winners.select{ |app| app.development? }.any?

div
  header.group.page-header.page-header-wider
    div
      h1 Winners' Resources 2022

  .article-container.article-container-wider
    article.group role="article"
      .inner
        p Here you can download Queen's Awards for Enterprise resources for use in your websites and advertising materials. The Winners' Manual provides more detailed information on where and how you are allowed to use these resources.

        br

        h2 Download The Queen's Awards for Enterprise Winners' Manual 2022

        .form-download
          p
            = link_to "Queen's Awards for Enterprise Winners' Manual 2022 (PDF, 877KB)",
                      static_s3_asset_path(2022, "Winners- Manual 2022.pdf"),
                      class: "thumbnail",
                      target: "_blank"

        h2 Download a Sample Press Release

        .form-download
          p
            = link_to "Sample Press Release 2022 (PDF, 74KB)",
                      static_s3_asset_path(2022, "Sample Press Release 2022.pdf"),
                      class: "thumbnail",
                      target: "_blank"

        h2 Download The Queen's Awards Emblem Guidance 2022

        .form-download
          p
            = link_to "Queen's Awards Emblem Guidance 2022 (PDF, 991)",
                      static_s3_asset_path(2022, "QAE Emblem Guidance 2022.pdf"),
                      class: "thumbnail",
                      target: "_blank"

        h2 Download The Queen's Awards for Enterprise 2022 Emblems in various formats

        .form-download
          - if any_promotion_winner
            p
              = link_to "Queen's Awards for Enterprise 2022 Emblem - Promoting Opportunities (PNG, 100KB)",
