- title "Winners' Resources 2022"

- winners = FormAnswerDecorator.decorate_collection(@user_award_forms_submitted).select{ |app| app.awarded? }
- any_promotion_winner = winners.select{ |app| app.mobility? }.any?
- any_innovation_winner = winners.select{ |app| app.innovation? }.any?
- any_trade_winner = winners.select{ |app| app.trade? }.any?
- any_development_winner = winners.select{ |app| app.development? }.any?

div
  h1.govuk-heading-xl Winners' Resources 2022

  .article-container.article-container-wider
    article.group role="article"
      div
        p.govuk-body Here you can download King's Awards for Enterprise resources for use in your websites and advertising materials. The King's Awards Media Pack provides more detailed information on where and how you are allowed to use these resources.

        br

        h2.govuk-heading-m Download The King's Awards Media Pack 2022

        .form-download
          p.govuk-body
            = link_to "King's Awards Media Pack 2022 (PDF, 819.6KB)",
                      static_s3_asset_path(2022, "Winners_Manual_2022.pdf"),
                      class: "thumbnail",
                      target: "_blank", class: 'govuk-link'

        h2.govuk-heading-m Download a Sample Press Release

        .form-download
          p.govuk-body
            = link_to "Sample Press Release 2022 (PDF, 115.8KB)",
                      static_s3_asset_path(2022, "Sample_Press_Release_2022.pdf"),
                      class: "thumbnail",
                      target: "_blank", class: 'govuk-link'

        h2.govuk-heading-m Download The Queen's Awards Emblem Guidance 2022

        .form-download
          p.govuk-body
            = link_to "Queen's Awards Emblem Guidance 2022 (PDF, 561.1KB)",
                      static_s3_asset_path(2022, "Emblem_2022.pdf"),
                      class: "thumbnail",
                      target: "_blank", class: 'govuk-link'

        h2.govuk-heading-m Download The Queen's Awards for Enterprise 2022 Emblems in various formats

        .form-download
          - if any_promotion_winner
            p.govuk-body
              = link_to "Queen's Awards for Enterprise 2022 Emblem - Promoting Opportunities (PNG, 102.7KB)",
                        static_s3_asset_path(2022, "QA-logo-categories-2022_promoting.png"),
                        target: "_blank", class: 'govuk-link'
            p.govuk-body
              = link_to "Queen's Awards for Enterprise 2022 Emblem - Promoting Opportunities (EPS, 5.3MB)",
                        static_s3_asset_path(2022, "QA-logo-categories-2022_promoting.eps"),
                        target: "_blank", class: 'govuk-link'

          - if any_innovation_winner
            p.govuk-body
              = link_to "Queen's Awards for Enterprise 2022 Emblem - Enterprise Innovation (PNG, 97.7KB)",
                        static_s3_asset_path(2022, "QA-logo-categories-2022_innovation.png"),
                        target: "_blank", class: 'govuk-link'

