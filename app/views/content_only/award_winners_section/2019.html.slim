          p
            = link_to "Queen's Awards Stakeholders Toolkit (PPTX, 2.8MB)",
                      static_s3_asset_path(2019, "Stakeholders_toolkit_2020.pptx"),
                      class: "thumbnail",
                      target: "_blank"

