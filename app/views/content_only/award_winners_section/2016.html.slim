          p
            = link_to "Queen's Awards for Enterprise Press Book 2016 (PDF, 5,8 MB)",
                      static_s3_asset_path(2016, "Queen's Awards for Enterprise Press Book 2016.pdf"),
                      class: "thumbnail",
                      target: "_blank"

